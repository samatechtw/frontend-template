{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "es2017",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "jsx": "preserve",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@frontend/components/nav": ["web/frontend-template/src/components/nav/index.ts"],
      "@frontend/components/widgets": [
        "web/frontend-template/src/components/widgets/index.ts"
      ],
      "@frontend/components/svg": ["web/frontend-template/src/components/svg/index.ts"],
      "@frontend/api": ["web/frontend-template/src/api/index.ts"],
      "@frontend/features": ["web/frontend-template/src/features/index.ts"],
      "@frontend/store": ["web/frontend-template/src/store/index.ts"],
      "@frontend/types": ["web/frontend-template/src/types/index.ts"],
      "@frontend/util/i18n": ["web/frontend-template/src/util/i18n/index.ts"],
      "@frontend/util/app": ["web/frontend-template/src/util/app/index.ts"],
      "@frontend/util/misc": ["web/frontend-template/src/util/misc/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
